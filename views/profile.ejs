<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<link width="" rel="shortcut icon" href="../images/logo-mercado-liebre.jpg" />
	
	<title> Loniaz Art & Design </title>
			<!-- Font Awesome Stylesheet -->
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.11.2/css/all.min.css">
	<!-- Bootstrap Grid Stylesheet -->
	<link rel="stylesheet" href="../css/bootstrap-grid.min.css">
	<!-- Own Stylesheet -->
	<link rel="stylesheet" href="../css/app.css">
</head>
<body>
	<!-- Header -->
	<% if(locals.user != undefined) { %>
		<%- include('./partials/headerLogueado.ejs') %>
<% } else { %>
   <%- include('./partials/header.ejs') %>
<% } %>
	</header>
	<!-- /Header -->

	<!-- Datos del usuario -->
	<section class="info-usuario container products-wrapper">
		<div class="row">
			<div class="img-container offset-3 col-2">
				<img src="../images/Captura de Pantalla 2023-04-10 a la(s) 19.23.58.png" alt="foto de perfil" class="foto-perfil">
			</div>
			<div class="data-container col-6">
				<div class="d-flex align-items-center ">
					<h1 class="main-title"> <%= datosUsuario.username %>
						<a href="./profile/editar">
							<i class="fas fa-cog"></i>
						</a>
					</h1>
					<a class="btn mt-3 ml-4" href="">SEGUIR</a>
				</div>
				<div>
					<ul class="">
						<li>8 productos</li>
						<li>2000 seguidores</li>
						<li>300 comentarios</li>
					</ul>
				</div>
			</div>
		</div>
	</section>
	<!-- /Datos del usuario -->

	<!-- Mis productos -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Mis productos: <%=datosUsuario.productos.length %></h2> 
				<p>Ordenados del m√°s al menos reciente</p>
			</div>
			<!-- Show mis productos -->
<section class="bloque">

	<% if (datosUsuario.productos.length > 0) { %>

		<% for (let i = datosUsuario.productos.length - 1; i >= 0; i--) { %>	<div class="col-12 col-sm-6 col-lg-3">
			<section class="product-box">
				<a href= "/products/detalle/id/<%=datosUsuario.productos[i].id%>">
					<article class="product-box_data">
						<h2> <%= datosUsuario.productos[i].nombreproducto%> </h2>
					</article>
				</a>
			</section>
		</div>
		<% } %>
	<% } %>
</div>
</div>
</section>
	
	<!-- /Mis productos -->


	<!-- footer -->
	<%- include('./partials/footer') %>
	<!-- /footer -->
</body>	
</html>