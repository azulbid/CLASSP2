<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->

<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<link width="" rel="shortcut icon" href="../public/images/loniaz.png" />

	<title> Loniaz Art & Design </title>
	<!-- Font Awesome Stylesheet -->
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.11.2/css/all.min.css">
	<link rel="stylesheet" href="https://fontawesome.com/icons/trash-can?f=classic&s=solid&pc=%23ffffff">
	<!-- Bootstrap Grid Stylesheet -->
	<link rel="stylesheet" href="/css/bootstrap-grid.min.css">
	<!-- Own Stylesheet -->
	<link rel="stylesheet" href="/css/app.css">
</head>

<body>
	<!-- Header -->
	<% if(locals.user !=undefined) { %>
		<%- include('./partials/headerLogueado.ejs') %>
			<% } else { %>
				<%- include('./partials/header.ejs') %>
					<% } %>
						<!-- /Header -->

						<!-- product detail -->
						<div class="container products-wrapper">
							<div class="d-flex align-items-center">
								<h2 class="products-title">
									<%=datosproducto.nombreproducto%>

									<% if(idUsuario == datosproducto.usuario.id) { %>

									
										<a href="/products/modify/<%= datosproducto.id %>">
											<i class="fas fa-cog"></i>
										</a>
										<% } %>
										
						
								</h2>

								<a href="/profile/<%=datosproducto.usuario.username%>">
									<h3 class="product-detail-description"></p>
									<%=datosproducto.usuario.username%>
									</h3>
								</a>


							</div>


							<div class="product-detail">
								<div class="row">
									<article class="col-12 col-lg-8 product-detail-info">
										<!-- <img src="/images/venusdemilo.webp" alt="" class="product-detail-img"> -->
										<img src="<%=datosproducto.imagenes%>" alt="xxx"
											class="product-detail-img">
										<p class="product-detail-description">
											<%=datosproducto.descripcionproducto%>
										</p>
										<% if(idUsuario == datosproducto.usuario.id) { %>

										<form action="/products/delete/<%=datosproducto.id%>" method="post" >
											<button type="submit" >
											  <i class="fas fa-trash"></i> Eliminar Producto
											</button>
										  </form>
										  	<% } %>
									</article>
									
									

									<% if(locals.user !=undefined) { %>
										<div>
										<section class="comments">
											<form class="form" action="" method="POST">
														<input class="form-input" type="text" value="" name="comentario"
															placeholder="Agregar comentario">
														<button type="submit" class="buy-now-button">AGREGAR
															COMENTARIO</button>
													</form><% for (let i=datosproducto.comentarios.length - 1; i>= 0; i--) { %>
												<div class="col-12 col-lg-4">
													<p class="user">
														<strong> <a
																href="/profile/<%=datosproducto.comentarios[i].usuario.username%>">
																<%=datosproducto.comentarios[i].usuario.username%>
															</a> </strong>
														<%=datosproducto.comentarios[i].texto_comentario%>
													</p>
													<article class="product-box_data">

													</article>
													</a>
													
												</div>

												<% } %>


													<% } else { %>
														<h3>Es necesario que este logueado para comentar </h3>
														<% } %>




										</section>

										</div>

										<!-- </section>
										<form class="form" action="" method="POST">
											<input name="comentario" class="form-input" type="text" value=""
												placeholder="Agregar comentario">
											<button type="submit" class="buy-now-button">Agregar comentario (solo
												usuarios logueados)</button>
										</form> -->

								</div>
							</div>
						</div>
						</div>
						<!-- /product detail -->

						<!-- footer -->
						<%- include('./partials/footer') %>
							<!-- /footer -->