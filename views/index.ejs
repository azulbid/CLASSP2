<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->

<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<link width="" rel="shortcut icon" href="../public/images/loniaz.png" />

	<title> Loniaz Art & Design</title>
	<!-- Font Awesome Stylesheet -->
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.11.2/css/all.min.css">
	<!-- Bootstrap Grid Stylesheet -->
	<link rel="stylesheet" href="../css/bootstrap-grid.min.css">
	<!-- Own Stylesheet -->
	<link rel="stylesheet" href="../css/app.css">
</head>

<body>
	<!-- Header -->
	 <% if(locals.user != undefined) { %>
		 <%- include('./partials/headerLogueado.ejs') %>
<% } else { %>
	<%- include('./partials/header.ejs') %>
<% } %>
 
		<!-- /Header -->

		<!-- Banner -->
		<div class='banner'>
			<img src="images/Captura de Pantalla 2023-04-10 a la(s) 12.05.44.png" alt="Banner de ofertas">
		</div>
		<!-- /Banner -->

		<!--Novedades -->
		<br><br><br><br><br><br><br><br><br><br><br>
		<div class="container products-wrapper">
			<div class="row">
				<div class="col-12">
					<h2 class="products-title">Obras de arte más recientes</h2>
				</div>

				<section class="bloque">
					<% for (let i = lista.length - 1; i >= lista.length - 6; i--) { %>
						<div class="col-12 col-sm-6 col-lg-3">
						<section class = 'product-box'>
								<figure class="product-box_image">
									<a href="/products/detalle/id/<%=lista[i].id%>">

										<img src="<%= lista[i].imagenes %>" alt="<%= lista[i].nombreproducto %>">										</a>
									
								</figure>
								<article class="product-box_data">
									<h2>
										<a href="/products/detalle/id/<%=lista[i].id%>">

										<%= lista[i].nombreproducto %>
										</a>
									</h2>
				
									<p>
										<%= lista[i].descripcionproducto %>
									</p>
									<h5>
										<a href ="/profile/<%=lista[i].usuario.username%>" >
										<%= lista[i].usuario.username %>
									</a>
									</h5>	
								</article>
							</a>
						</section>
					</div>
					
					<%} %>
			</div>
		</div>
		</section>

		<!-- /Novedades -->
		<!-- Más comentados -->
		<div class="container products-wrapper">
			<div class="row">
				<div class="col-12">
					<h2 class="products-title">Obras de arte recomendadas</h2>
				</div>

				
				<section class="bloque">
					<% for (let i = 5; i >= 0; i--) { %>
						<div class="col-12 col-sm-6 col-lg-3">
						<section class = 'product-box'>
								<figure class="product-box_image">
									<img src="<%= lista2[i].imagenes %>" alt="<%= lista2[i].nombreproducto %>">
								</figure>
								<article class="product-box_data">
									<h2>
										<a href="/products/detalle/id/<%=lista2[i].id%>">

										<%= lista2[i].nombreproducto %>
										</a>
									</h2>
				
									<p>
										<%= lista2[i].descripcionproducto %>
									</p>
									<h5>
										<a href ="/profile/<%=lista[i].usuario.username%>" >
										<%= lista2[i].usuario.username %>
									</a>
									</h5>	
								</article>
							</a>
						</section>
					</div>
					
					<%} %>
			</div>
		</div>
		</section>

		<!-- footer -->

		<%- include('./partials/footer') %> 	<!-- archivos parciales, trae un bloque de codigo definido en un js dentro de partials -->
			<!-- /footer -->
</body>

</html>