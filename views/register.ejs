<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->

<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<link width="" rel="shortcut icon" href="../images/logo-mercado-liebre.jpg" />

	<title> Loniaz Art & Design </title>
	<!-- Font Awesome Stylesheet -->
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.11.2/css/all.min.css">
	<!-- Bootstrap Grid Stylesheet -->
	<link rel="stylesheet" href="./css/bootstrap-grid.min.css">
	<!-- Own Stylesheet -->
	<link rel="stylesheet" href="./css/app.css">
</head>

<body>	
	<!-- Header -->
	<% if(locals.user != undefined) { %>
		<%- include('./partials/headerLogueado.ejs') %>
<% } else { %>
   <%- include('./partials/header.ejs') %>
<% } %>
	<!-- /Header -->

	<!-- Novedades -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Registrate</h2>
			</div>
			<!-- Show the "ultimos" products -->
	
<!-- formulario de registración -->
	<form action="/register" method="POST" class="">
		 <img src="/images/3201052.png" alt="" class="registrafoto">
				
				<% if(locals.errors){  %> 
					<p class= “error”> <%= errors.message %> </p>
				 <% } %>
				 
		<label>EMAIL</label><input id="email" class="input" type="email" name="email" placeholder="EMAIL">
		<br>
		<br>
		<label>NOMBRE DE USUARIO</label><input id="username" class="input" type="text" name="username" placeholder="USUARIO">
		<br>
		<br>
		<label>CONTRASEÑA</label><input id="contrasena" class="input" type="password" name="contrasena" placeholder="CONTRASEÑA">
		<br><br>
		<label>FECHA DE NACIMIENTO</label><input class="input" type="date" name="fecha" id="fecha" placeholder="FECHA NACIMIENTO">
		<br><br>
		<label>NUMERO DE DOCUMENTO</label><input class="input" type="number" name="dni" placeholder="NRO DOCUMENTO">
		<br><br> 
		<label class="fotodeperfil">FOTO DE PERFIL</label><input type="text" name="fotodeperfil" placeholder="FOTO DE PERFIL"> 
		<br><br>
		<button class="boton" type="submit"> REGISTRARME </button>
		<br><br>
	</form>
	
				
	<!-- footer -->
	<%- include('./partials/footer') %>
	<!-- /footer -->
</body>

</html>